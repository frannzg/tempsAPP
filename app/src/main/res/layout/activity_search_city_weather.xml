<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Título -->
    <TextView
        android:id="@+id/searchCityTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Buscar clima por ciudad"
        android:textSize="20sp"
        android:layout_marginBottom="8dp"
        android:gravity="center" />

    <!-- Campo para introducir el nombre de la ciudad -->
    <EditText
        android:id="@+id/cityInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Introduce el nombre de la ciudad"
        android:layout_marginBottom="16dp" />

    <!-- Botón para buscar el clima -->
    <Button
        android:id="@+id/searchButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Buscar clima"
        android:layout_marginBottom="16dp" />

    <!-- Información del clima buscado -->
    <TextView
        android:id="@+id/searchWeatherTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="18sp"
        android:layout_marginBottom="16dp" />

    <!-- Ícono del clima (grande) -->
    <ImageView
        android:id="@+id/weatherIcon"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:scaleType="fitCenter"
        android:layout_marginBottom="16dp" />

    <!-- Indicador de carga -->
    <ProgressBar
        android:id="@+id/searchProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

</LinearLayout>

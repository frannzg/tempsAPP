<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:background="@color/colorFONDOAPP">

    <!-- Título -->
    <TextView
        android:id="@+id/searchCityTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Buscar clima por localidades"
        android:textSize="30sp"
        android:textColor="#FBFBFB"
        android:layout_marginBottom="16dp"
        android:gravity="center" />

    <!-- Entrada de texto para la ciudad -->
    <EditText
        android:id="@+id/cityInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Introduce el nombre de la localidades"
        android:textColor="#FBFBFB"
        android:textColorHint="#BFBFBF"
        android:background="@android:color/transparent"
        android:padding="12dp"
        android:layout_marginBottom="16dp" />

    <!-- Botón para buscar -->
    <Button
        android:id="@+id/searchButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/CustomButton"
        android:text="Buscar clima"
        android:textSize="18sp"
        android:padding="12dp"
        android:layout_marginBottom="16dp" />

    <!-- Icono del clima -->
    <ImageView
        android:id="@+id/weatherIcon"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:scaleType="fitCenter"
        android:layout_marginBottom="16dp" />

    <!-- Descripción del clima -->
    <TextView
        android:id="@+id/searchWeatherTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="18sp"
        android:textColor="#FBFBFB"
        android:layout_marginBottom="16dp"
        android:gravity="center" />

    <!-- Barra de progreso -->
    <ProgressBar
        android:id="@+id/searchProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

</LinearLayout>
